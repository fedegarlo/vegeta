{
  "hosting": {
    "public": "dist",
    "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
    ],
     "rules": {
        "user": {
          "$uid": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        "questions": {
            ".read": true,
            ".write": false          
        },
        "sections": {
           ".indexOn" : ["order"],
            ".read": true,
            ".write": false          
        }
    }
  }
}